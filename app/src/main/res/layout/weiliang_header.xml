<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/weiliang_header_height"
    android:background="@drawable/main_nav_header_bg"
    >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nuuneoi"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/weiliang_header_image_marginBottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/app_name_des"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/weiliang_header_text_marginBottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

</FrameLayout>
