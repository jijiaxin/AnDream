<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jjx.andream" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeSingle" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AnDream" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PersonalActivity"
            android:label="@string/title_activity_personal"
            android:theme="@style/AppThemeSingle" >
        </activity>
        <activity
            android:name=".activities.BlogActivity"
            android:theme="@style/AppThemeSingle"
            android:label="@string/title_activity_blog" >
        </activity>
    </application>

</manifest>

